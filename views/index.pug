html
    head
        title=name

        link(rel="stylesheet", type="text/css", href="/styles/style.css")
        link(rel="stylesheet", type="text/css", href="/bower_components/bootstrap/dist/css/bootstrap.css")

        script(src="//cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js")
        script(src="//code.jquery.com/jquery-1.11.1.js")

        script(src="/bower_components/angular/angular.js")
        script(src="/bower_components/angular-route/angular-route.js")
        script(src="/bower_components/angular-resource/angular-resource.js")

        script(src="/scripts/ua-parser.min.js")

        script(src="/scripts/socketio.js")
        script(src="/scripts/index.js")

        script(src="/scripts/app.module.js")
        script(src="/scripts/app.config.js")

        script(src="/scripts/task-list/task-list.module.js")
        script(src="/scripts/task-list/task-list.component.js")

        script(src="/scripts/task-detail/task-detail.module.js")
        script(src="/scripts/task-detail/task-detail.component.js")

        script(src="/scripts/task-new/task-new.module.js")
        script(src="/scripts/task-new/task-new.component.js")

        script(src="//cdn.headwayapp.co/widget.js")

    body(onload="bodyLoaded();", ng-app="ngApp")
        div#headwayapp


        div(ng-view)

        hr
        hr
        hr

        h1=version
        h2=name

        hr

        h3 All routes:

        ul
            for route in routes
                li=route.methods + " > "
                    a(href=route.path)=route.path

        hr
        hr

        div#connectCounter

        hr

        h3 Browsers:
        div#users

        hr

        h3 Chat:

        div#contentWrap
            div#chatWrap
                div#chat
                form#send-message
                    input#message(size="60", placeholder="Chat")
                    input(type="submit")





